{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2017", "dom"],
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "paths": {
      "utils/*": ["packages/utils/*"],
      "utils": ["packages/utils"],
      "places-lib/*": ["packages/places-lib/*"],
      "places-lib": ["packages/places-lib"],
      "product-config/*": ["packages/product-config/*"],
      "product-config": ["packages/product-config"],
      "category-config/*": ["packages/category-config/*"],
      "category-config": ["packages/category-config"],
      "config-layer/*": ["packages/config-layer/*"],
      "config-layer": ["packages/config-layer"],
    },
    "types": ["node"],
    "outDir": "dist",
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["**/node_modules/*", "**/dist/**", "test/*", "classes/**/node_modules/**", "classes/**/rio.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
